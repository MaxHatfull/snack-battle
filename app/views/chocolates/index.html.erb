<% unless @names_visible %>
  <% if @closed %>
    <h1 id="url">Voting has now closed! <%= link_to("Results", result_chocolates_path) %></h1>
  <% else %>
    <h1 id="url">Vote here: yerl.org/W9NFC</h1>
  <% end %>
<% end %>
<div>
  <%= turbo_stream_from "chocolates_#{@names_visible ? "secret" : "public"}" %>
  <%= render partial: 'ranking_table', locals: { names_visible: @names_visible, chocolates: @chocolates} %>
</div>
